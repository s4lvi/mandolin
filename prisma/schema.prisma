generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id              String    @id @default(cuid())
  email           String    @unique
  passwordHash    String
  name            String?
  hasSeenWelcome  Boolean   @default(false)
  lastSeenVersion String?   // Track which app version user has seen
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  decks           Deck[]
  sessions        Session[]
  accounts        Account[]
  stats           UserStats?
  achievements    UserAchievement[]
  reviewHistory   ReviewHistory[]
  feedback        Feedback[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Deck {
  id          String   @id @default(cuid())
  name        String   @default("My Deck")
  description String?
  userId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  cards       Card[]
  lessons     Lesson[]

  @@index([userId])
}

model Lesson {
  id          String    @id @default(cuid())
  number      Int
  title       String?
  date        DateTime?
  notes       String?   @db.Text
  deckId      String
  createdAt   DateTime  @default(now())

  deck        Deck      @relation(fields: [deckId], references: [id], onDelete: Cascade)
  cards       Card[]

  @@unique([deckId, number])
  @@index([deckId])
}

model Card {
  id             String    @id @default(cuid())
  hanzi          String
  pinyin         String
  english        String
  notes          String?   @db.Text
  type           CardType  @default(VOCABULARY)
  lessonId       String?
  deckId         String
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  // Spaced repetition fields
  correctCount   Int       @default(0)
  incorrectCount Int       @default(0)
  lastReviewed   DateTime?
  nextReview     DateTime?

  // SM-2 algorithm fields
  easeFactor     Float     @default(2.5)
  interval       Int       @default(0)
  repetitions    Int       @default(0)
  state          CardState @default(NEW)

  deck           Deck      @relation(fields: [deckId], references: [id], onDelete: Cascade)
  lesson         Lesson?   @relation(fields: [lessonId], references: [id], onDelete: SetNull)
  tags           CardTag[]
  reviewHistory  ReviewHistory[]
  testQuestions  TestQuestion[]

  @@unique([deckId, hanzi])
  @@index([deckId])
  @@index([lessonId])
  @@index([deckId, nextReview, state]) // For fetching due cards efficiently
  @@index([deckId, state]) // For filtering by card state
  @@index([deckId, type]) // For filtering by card type
  @@index([nextReview])
  @@index([state])
}

model Tag {
  id        String    @id @default(cuid())
  name      String    @unique
  category  String?

  cards     CardTag[]
}

model CardTag {
  cardId    String
  tagId     String

  card      Card      @relation(fields: [cardId], references: [id], onDelete: Cascade)
  tag       Tag       @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([cardId, tagId])
}

enum CardType {
  VOCABULARY
  GRAMMAR
  PHRASE
  IDIOM
}

enum CardState {
  NEW
  LEARNING
  REVIEW
  LEARNED
}

model UserStats {
  id              String   @id @default(cuid())
  userId          String   @unique
  totalXp         Int      @default(0)
  level           Int      @default(1)
  currentStreak   Int      @default(0)
  longestStreak   Int      @default(0)
  lastReviewDate  DateTime?
  totalReviews    Int      @default(0)
  totalCorrect    Int      @default(0)
  dailyGoal       Int      @default(20)
  dailyProgress   Int      @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Achievement {
  id          String   @id @default(cuid())
  key         String   @unique
  name        String
  description String
  icon        String
  xpReward    Int      @default(0)
  requirement Int      @default(1)
  category    String   @default("general")

  users       UserAchievement[]
}

model UserAchievement {
  id            String   @id @default(cuid())
  userId        String
  achievementId String
  unlockedAt    DateTime @default(now())
  progress      Int      @default(0)

  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  achievement   Achievement @relation(fields: [achievementId], references: [id], onDelete: Cascade)

  @@unique([userId, achievementId])
}

model ReviewHistory {
  id          String   @id @default(cuid())
  userId      String
  cardId      String
  quality     Int
  easeFactor  Float
  interval    Int
  xpEarned    Int      @default(0)
  reviewedAt  DateTime @default(now())

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  card        Card     @relation(fields: [cardId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([cardId])
  @@index([reviewedAt])
}

model Feedback {
  id              String       @id @default(cuid())
  userId          String
  type            FeedbackType
  message         String       @db.Text
  email           String?
  testQuestionId  String?      // Optional: for reporting test question issues
  createdAt       DateTime     @default(now())

  user            User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  testQuestion    TestQuestion? @relation(fields: [testQuestionId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([createdAt])
  @@index([testQuestionId])
}

enum FeedbackType {
  BUG
  FEATURE
  GENERAL
}

model TestQuestion {
  id                String        @id @default(cuid())
  cardId            String
  direction         TestDirection

  // AI-generated content
  questionText      String        // "What does 你好 (nǐ hǎo) mean?"
  correctAnswer     String        // "hello"
  acceptableAnswers String[]      // ["hello", "hi", "greetings"]
  distractors       String[]      // 12-15 plausible wrong answers

  // Metadata
  generatedAt       DateTime      @default(now())
  timesUsed         Int           @default(0)

  card              Card          @relation(fields: [cardId], references: [id], onDelete: Cascade)
  feedback          Feedback[]    // User-reported issues with this question

  @@unique([cardId, direction])
  @@index([cardId])
}

enum TestDirection {
  HANZI_TO_MEANING  // Show Chinese → answer meaning (English/Pinyin)
  MEANING_TO_HANZI  // Show English → answer Chinese (Hanzi)
  PINYIN_TO_HANZI   // Show Pinyin → answer Hanzi
}

model Changelog {
  id          String   @id @default(cuid())
  version     String   @unique // Semantic version (e.g., "1.0.0")
  title       String   // Short title for the release
  changes     String[] // Array of changelog items
  releaseDate DateTime @default(now())
  createdAt   DateTime @default(now())

  @@index([releaseDate])
}
